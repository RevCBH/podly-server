Episode
    podcast Text
    title Text
    number Int
    slug Text
    airDate UTCTime
    published Bool
    UniqueEpisodeNumber podcast number
    deriving Show

NodeInstance
    nodeId NodeId Eq
    nodeTypeId NodeTypeId Maybe
    episodeId EpisodeId Eq
    time Text
